<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link rel="stylesheet" href="stylesheets/stylesIndex.css">
    <title>Login Page</title>
    <style>
        .flex-row {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }
    </style>
</head>

<body>
    <div>
        <div class="shadow bg-dark p-1">
            <div class="ref">
                <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                            aria-controls="pills-login" aria-selected="true">Login</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="/register" role="tab"
                            aria-controls="pills-register" aria-selected="false">Register</a>
                    </li>
                </ul>
                <!-- Pills navs -->
                <!-- Email input -->
                <div class="form-outline mb-4 mt-5 pt-1">
                    <input type="email" id="loginName" class="form-control" />
                    <label class="form-label" for="loginName">Email or username</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="loginPassword" class="form-control" />
                    <label class="form-label" for="loginPassword">Password</label>
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4 ms-4 ps-4">
                    <div class="justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                            <label class="form-check-label" for="loginCheck" id="rememberMe"> Remember me </label>
                        </div>
                    </div>
                </div>

                <!-- Sign-in buttons -->
                <div class="flex-row mb-4">
                    <button type="button" class="btn btn-primary btn-block" onclick="onLogin(false)">Sign in</button>
                    <button type="button" class="btn btn-primary btn-block" onclick="onLogin(true)">Sign in as Instructor</button>
                </div>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a href="/register">Register</a></p>
                </div>
                </form>
            </div>
            <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                <form>
                    <!-- Registration form content -->
                </form>
            </div>
        </div>
    </div>
    <script>
        const onLogin = async (asInstructor) => {
            const email = $('#loginName').val();
            const password = $('#loginPassword').val();
            const remember = $('#loginCheck').checked;
            console.log("Hello")
            const loginData = {
                email,
                password,
                remember,
                asInstructor
            };

            const loginUrl = '/login'; // Replace with your login endpoint

            try {
                const response = await fetch(loginUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(loginData),
                });

            if (response.status == 200) {window.location.href='/index'};
            if (response.status == 401) {alert("Only instructors can login as instructors.")}
            if (response.status == 403) {alert("Incorrect Credentials. Please try again.")}
            }
            catch (error) {
                console.log(error)
            }
        }
    </script>
</body>

</html>
